{
  "manifest_version": 3,
  "name": "Black-Fox: Telegram Content Analyzer",
  "version": "2.0.0",
  "description": "Analyzes messages for ads/spam and classifies images for NSFW content in Telegram Web.",
  "options_page": "popup.html",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://web.telegram.org/*",
    "https://blackfoxus.ru:8443/"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://web.telegram.org/a/*",
        "https://web.telegram.org/k/*",
        "https://web.telegram.org/z/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Black-Fox Settings"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}